
<center>
<h1>Leave Application</h1>
<div id="leave_form">
	<%= form_for @leaveDetails, :url => { :action => "add" } do |f|	%>
		<table>
			<tr>
				<td><%=f.label :leave_reason, 'Leave Reason'%></td>
				<td><%=f.text_area :leave_reason, :cols => 30, :rows => 10 %>
			</tr>
			<tr>
				<td><%=f.label :leave_from, "Leave Start Date"%></td>
				<td><%= f.text_field :leave_from, :class => 'datepicker' %></td>
			</tr>
			<tr>
				<td><%=f.label :leave_to, "Leave End Date"%></td>
				<td><%= f.text_field :leave_to, :class => 'datepicker' %>
			</tr>
			<tr>
				<td><%=f.label :leave_duration, "Leave Duration"%></td>
				<td><%=f.text_field :leave_duration%>
			</tr>
			<tr>
				<td colspan="2" align="center"><%=f.submit "Send for Approval"%></td>
			</tr>
		</table>
	<%end%>
</div>
</center>