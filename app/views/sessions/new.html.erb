<div class='row'>
	<div class='five columns'>
		<h1>Log in</h1>

		<%= form_tag sessions_path do %>
		  <p>
		    <%= label_tag :email %><br />
		    <%= text_field_tag :email, params[:email] %>
		  </p>
		  <p>
		    <%= label_tag :password %><br />
		    <%= password_field_tag :password %>
		  </p>
		  <p><%= submit_tag "Log in", :class => 'radius button' %></p>
		<% end %>
	</div>
</div>